{
  "name": "NestJS Dev",
  "dockerComposeFile": ["../docker-compose.yml", "docker-compose.extend.yml"],
  "service": "api",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  "remoteUser": "node",

  "postCreateCommand": "npm install",

  "forwardPorts": [3000],

  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens",
        "mongodb.mongodb-vscode",
        "rangav.vscode-thunder-client"
      ]
    }
  }
}
